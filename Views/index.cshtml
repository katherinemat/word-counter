@{
    Layout="Shared/_Layout.cshtml";
}

<h2>Check to see how many times your word shows up in a sentence</h2>
<form action="/results" method="post">
  <div class="form-group">
    <label for="word">Word:</label>
    <input class="form-control" type="text" name="word" id="word" required placeholder="biggy">
  </div>
  <div class="form-group">
    <label for="phrase">Sentence:</label>
    <textarea class="form-control" rows="3" type="text" name="phrase" id="phrase" required placeholder="BIGGY biggy bIgGy can't you see"></textarea>
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Count</button>
</form>
